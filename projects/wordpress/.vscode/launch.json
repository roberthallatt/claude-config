{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Listen for Xdebug (DDEV)",
      "type": "php",
      "request": "launch",
      "port": 9003,
      "pathMappings": {
        "/var/www/html": "${workspaceFolder}"
      },
      "hostname": "0.0.0.0",
      "ignore": [
        "**/vendor/**/*.php",
        "**/wp-admin/**/*.php",
        "**/wp-includes/**/*.php"
      ]
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}"
    }
  ]
}
