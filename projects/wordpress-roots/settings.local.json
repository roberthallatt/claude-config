{
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7"
  ],
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(composer:*)",
      "Bash(cp:*)",
      "Bash(ddev:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git fetch:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git stash:*)",
      "Bash(git status:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(php:*)",
      "Bash(rm:*)",
      "Bash(tail:*)",
      "Bash(touch:*)",
      "Bash(wc:*)",
      "Bash(wp:*)",
      "Bash(yarn:*)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",

      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/*.crt)",
      "Read(**/*.cer)",
      "Read(**/*.der)",
      "Read(**/*.csr)",
      "Read(**/*.jks)",
      "Read(**/*.keystore)",
      "Read(**/*.priv)",

      "Read(**/.ssh/*)",
      "Read(**/id_rsa)",
      "Read(**/id_rsa.pub)",
      "Read(**/id_ed25519)",
      "Read(**/id_ed25519.pub)",
      "Read(**/id_dsa)",
      "Read(**/id_ecdsa)",

      "Read(**/.netrc)",
      "Read(**/.git-credentials)",
      "Read(**/.htpasswd)",

      "Read(**/auth.json)",
      "Read(**/.npmrc)",
      "Read(**/.yarnrc)",
      "Read(**/.pypirc)",

      "Read(**/.aws/credentials)",
      "Read(**/.aws/config)",
      "Read(**/application_default_credentials.json)",
      "Read(**/*service-account*.json)",
      "Read(**/*-credentials.json)",
      "Read(**/credentials.json)",
      "Read(**/.azure/*)",

      "Read(**/secrets.json)",
      "Read(**/secrets.yml)",
      "Read(**/secrets.yaml)",
      "Read(**/*.secret)",
      "Read(**/*.secrets)",
      "Read(**/*.token)",
      "Read(**/*.password)",
      "Read(**/vault.yml)",
      "Read(**/vault.yaml)",

      "Read(**/database.yml)",
      "Read(**/database.yaml)",

      "Read(**/*.log)",
      "Read(**/logs/*)",
      "Read(**/storage/logs/*)",

      "Read(**/wp-config.php)",
      "Read(**/wp-config-local.php)",
      "Read(**/wp-salt.php)",
      "Read(**/config/application.php)",
      "Read(**/config/environments/*.php)",
      "Read(**/.ddev/db_snapshots/*)",
      "Read(**/.ddev/import-db/*)"
    ]
  }
}
