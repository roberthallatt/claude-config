{
  "$schema": "https://google-gemini.github.io/gemini-cli/schemas/settings.json",
  "mcpServers": {
    "expressionengine": {
      "type": "stdio",
      "command": "ddev",
      "args": ["ee", "mcp:serve"],
      "cwd": "{{PROJECT_PATH}}",
      "env": {}
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    }
  },
  "context": {
    "fileName": ["GEMINI.md"],
    "maxDirectoryDepth": 5,
    "includeDirectories": [],
    "refreshIncludeDirectories": true
  },
  "tools": {
    "shell": {
      "enabled": true
    },
    "fileSystem": {
      "enabled": true
    },
    "webFetch": {
      "enabled": true
    },
    "webSearch": {
      "enabled": true
    }
  },
  "ui": {
    "theme": "default"
  }
}
