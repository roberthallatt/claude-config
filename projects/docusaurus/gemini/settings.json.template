{
  "$schema": "https://google-gemini.github.io/gemini-cli/schemas/settings.json",
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    }
  },
  "context": {
    "fileName": ["GEMINI.md"],
    "maxDirectoryDepth": 5
  },
  "tools": {
    "shell": { "enabled": true },
    "fileSystem": { "enabled": true },
    "webFetch": { "enabled": true },
    "webSearch": { "enabled": true }
  }
}
