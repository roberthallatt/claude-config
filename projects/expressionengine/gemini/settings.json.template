{
  "$schema": "https://google-gemini.github.io/gemini-cli/schemas/settings.json",
  "mcpServers": {
    "expressionengine": {
      "command": "ddev",
      "args": ["ee", "mcp:serve"],
      "cwd": "{{PROJECT_PATH}}",
      "env": {}
    }
  },
  "context": {
    "fileName": ["GEMINI.md", "AGENT.md"],
    "maxDirectoryDepth": 5,
    "includeDirectories": [],
    "refreshIncludeDirectories": true
  },
  "tools": {
    "shell": {
      "enabled": true
    },
    "fileSystem": {
      "enabled": true
    },
    "webFetch": {
      "enabled": true
    },
    "webSearch": {
      "enabled": true
    }
  },
  "ui": {
    "theme": "default"
  }
}
